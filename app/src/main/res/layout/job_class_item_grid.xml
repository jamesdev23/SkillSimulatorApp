<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:weightSum="10">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/jobclass_picture"
            style="@style/RoundedImageViewStyle"
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:src="@drawable/icon_default" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/jobclass_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:textSize="16sp"
            android:gravity="center"
            android:textAlignment="center"
            android:maxLines="2"
            android:text="@string/job_class_name_1"
            />

        <!--        <Button-->
        <!--            android:id="@+id/btn_options_row"-->
        <!--            android:layout_width="0dp"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_weight="1"-->
        <!--            android:background="@drawable/baseline_more_vert_24"-->
        <!--            android:layout_gravity="center_vertical"-->
        <!--            />-->


    </LinearLayout>



</androidx.cardview.widget.CardView>