<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="@color/may_green" />
            <stroke android:width="1px" android:color="@color/may_green"/>
            <padding
                android:bottom="10dp"
                android:left="25dp"
                android:right="25dp"
                android:top="10dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="@color/may_green_500" />
            <stroke android:width="20px" android:color="@color/may_green_500"/>
            <padding
                android:bottom="10dp"
                android:left="25dp"
                android:right="25dp"
                android:top="10dp"/>
        </shape>
    </item>
</selector>